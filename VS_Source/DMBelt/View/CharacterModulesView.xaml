        <!-- SAVE BUTTON -->
        <Button Grid.Column="1"
                Command="{Binding Path=SaveCommand}"
                Content="Save"
                HorizontalAlignment="Right"
                Margin="0,546,158,153" 
                MinWidth="60" Width="66"  />





    </Grid>
</UserControl>